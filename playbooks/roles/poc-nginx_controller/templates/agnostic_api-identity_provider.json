{
  "metadata": {
    "name": "idp_{{ extra_app.name | lower }}",
    "displayName": "Okta {{ extra_app.name | lower }}",
    "description": "Generated by CMP oAuth Authorization Server "
  },
  "desiredState": {
    "environmentRefs": [
      {
      "ref": "/services/environments/{{ var_env_prefix }}{{ extra_app.environment | lower }}"
      }
    ],
    "identityProvider": {
      "type": "JWT",
      "jwkFile": {
        "type": "REMOTE_FILE",
        "uri": "{{ stats_consul_list.0.value.jwk_file }}",
        "cacheExpire": "24h"
      }
    }
  }
}
